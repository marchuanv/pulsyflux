{
  "name": "pulsyflux-broker",
  "version": "2.0.0",
  "description": "Node.js bindings for PulsyFlux Broker - high-performance pub/sub messaging",
  "main": "registry.mjs",
  "type": "module",
  "scripts": {
    "install": "npm run build",
    "build": "npm run build:go && npm run build:addon",
    "build:go": "node -e \"require('child_process').execSync('build.bat', {stdio:'inherit'})\"",
    "build:addon": "npx tsx build.mjs",
    "clean": "node -e \"require('child_process').execSync('clean.bat', {stdio:'inherit'})\"",
    "test": "npx jasmine",
    "pretest": "npm run build"
  },
  "files": [
    "registry.mjs",
    "addon.cc",
    "broker_lib.go",
    "build.bat",
    "clean.bat",
    "build.mjs",
    "spec/",
    "README.md"
  ],
  "dependencies": {
    "node-addon-api": "^8.5.0",
    "zig-build": "github:solarwinds/zig-build"
  },
  "devDependencies": {
    "jasmine": "^5.13.0",
    "tsx": "^4.21.0"
  },
  "trustedDependencies": [
    "zig-build"
  ],
  "keywords": [
    "broker",
    "pubsub",
    "messaging",
    "events",
    "tcp",
    "multiplexing",
    "high-performance"
  ],
  "author": "",
  "license": "MIT"
}