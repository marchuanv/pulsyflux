{
  "name": "pulsyflux-broker",
  "version": "2.0.0",
  "description": "Node.js bindings for PulsyFlux Broker - high-performance pub/sub messaging",
  "main": ".bin/release/registry.mjs",
  "type": "module",
  "scripts": {
    "install": "npm run build",
    "build": "npm run build:setup && npm run build:go && npm run build:addon && npm run build:copy",
    "build:setup": "node -e \"const fs=require('fs'); fs.mkdirSync('.bin/release', {recursive:true})\"",
    "build:go": "node -e \"require('child_process').execSync('build.bat', {stdio:'inherit'})\"",
    "build:addon": "npx tsx build.mjs",
    "build:copy": "node -e \"const fs=require('fs'); fs.copyFileSync('registry.mjs', '.bin/release/registry.mjs'); fs.copyFileSync('broker_addon.node', '.bin/release/broker_addon.node'); fs.copyFileSync('broker_lib.dll', '.bin/release/broker_lib.dll')\"",
    "clean": "node -e \"require('child_process').execSync('clean.bat', {stdio:'inherit'}); const fs=require('fs'); try{fs.rmSync('.bin', {recursive:true})}catch(e){}\"",
    "test": "npx jasmine",
    "pretest": "npm run build"
  },
  "files": [
    ".bin/release/",
    "addon.cc",
    "broker_lib.go",
    "build.bat",
    "clean.bat",
    "build.mjs",
    "spec/",
    "README.md"
  ],
  "dependencies": {
    "node-addon-api": "^8.5.0",
    "zig-build": "github:solarwinds/zig-build"
  },
  "devDependencies": {
    "jasmine": "^5.13.0",
    "tsx": "^4.21.0"
  },
  "trustedDependencies": [
    "zig-build"
  ],
  "keywords": [
    "broker",
    "pubsub",
    "messaging",
    "events",
    "tcp",
    "multiplexing",
    "high-performance"
  ],
  "author": "",
  "license": "MIT"
}