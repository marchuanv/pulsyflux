{
  "name": "pulsyflux-broker",
  "version": "2.0.0",
  "description": "Node.js bindings for PulsyFlux Broker - high-performance pub/sub messaging",
  "main": "index.mjs",
  "type": "module",
  "scripts": {
    "postinstall": "npm run build",
    "build": "npm run build:go && npm run build:lib && npx tsx build.mjs",
    "build:go": "build.bat",
    "build:lib": "C:\\Users\\Marchuan\\.zig-build\\zig\\0.15.1\\zig.exe dlltool -D broker_lib.dll -d broker_lib.def -l broker_lib.lib",
    "test": "jasmine --config=spec/support/jasmine.json"
  },
  "dependencies": {
    "node-addon-api": "^8.5.0",
    "zig-build": "github:solarwinds/zig-build"
  },
  "devDependencies": {
    "jasmine": "^5.13.0",
    "prebuildify": "^6.0.1",
    "tsx": "^4.21.0"
  },
  "trustedDependencies": [
    "zig-build"
  ],
  "keywords": [
    "broker",
    "pubsub",
    "messaging",
    "events",
    "tcp",
    "multiplexing",
    "high-performance"
